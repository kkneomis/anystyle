<section class="colon14">
  <% @name= @user.name%>
       
        <!-- START CONTENT AND SIDEBAR -->
        <div class="container general buddypress-container">
        
            <div id="content" class="single col-lg-8 col-md-8 col-sm-12">

                <div class="buddypress-single-header">
                	<div class="col-lg-3 col-md-3 col-sm-12">
						<div class="buddy-group-blocks buddy-members">
							<figure class="inverse">
                <%if @user.image? %>
                 <%= cl_image_tag(@user.image.url(:thumbnail)) %>
               <%else %>
                  <%= image_tag("http://res.cloudinary.com/bisonshare/image/upload/v1426705998/https_www.leanstartupmachine.com_images_default_profile_photo_hjtmyk.png") %>
               <%end %>
                <hr>
                <% if (user_signed_in?) && (current_user != @user) %>
                  <% if current_user.following?(@user)%>
                     <%= link_to "Following", unfollow_user_path(@user), method: :put, class:"btn btn-primary btn-block text-center" %>
                   <% else %>
                      <%= link_to "Follow", follow_user_path(@user), method: :put, class:"btn btn-default btn-block text-center" %>
                   <% end %>
                <% elsif  current_user != @user %>
                   <%= link_to "Follow", follow_user_path(@user), method: :put, class:"btn btn-default btn-block text-center" %>
                <% end %>
                  
                
						</div>
                    </div>
                    
                	<div class="col-lg-9 col-md-9 col-sm-12">
							<figcaption>
                <h3><%= @user.name %></h3>
                
                <p><%= @user.bio %></p>
                
                
							</figcaption>
							</figure>
                    </div>
                </div> <!-- end author -->
               
              <div class="clearfix"></div>
              <div class="divider"></div>

              <div class="col-sm-12 col-lg-12">
                <div class="well">
                	<ul>
                    	<li><h5>Followers<span class="label label-warning" data-effect="pop"> <%= @user.followers.count %></span>
                   Following <span class="label label-warning" data-effect="pop"><%= @user.follows.count %></span></h5></li>
                    <li><h5>Posted<span class="label label-warning" data-effect="pop"><%= @user.styles.count %> </span>styles</h5></li>
                    <li><h5><%= link_to "View their Feed", feed_user_path(@user), method: :get %></h5></li>
                    </ul>
              <div class="clearfix"></div>
                </div>
              </div>

                
<ul class="buddy-activity">

				<li>
          <h3 class="text-center"> Styles shared by <%= @user.name %></h3>
          <% @user.styles.each do |style| %>    
                    <div class="col-lg-3 col-md-3 col-sm-6">
                      <div class="portfolio-columns">
                        <%= link_to(style,  "data-no-turbolink" => true) do %>                  
                          <%= cl_image_tag(style.image1,  :x => style.crop_x, :y => style.crop_y, :width => style.crop_w, :height => style.crop_h, :crop => :crop) %>
                        <div>
                          <br><br>
                        <h5><%= style.name %></h5>
                        </div>
                        <%end %>
                       </div>
                    </div>
            <% end %>       
				</li>
  
  </ul>
              <hr>
              
<ul class="buddy-activity">
  		<li>
          <h3 class="text-center"> Styles done by <%= @user.name %></h3>
        <% Style.where(stylist: @user).each do |style| %>    
                    <div class="col-lg-3 col-md-3 col-sm-6">
                      <div class="portfolio-columns">
                        <%= link_to(style,  "data-no-turbolink" => true) do %>                  
                          <%= cl_image_tag(style.image1,  :x => style.crop_x, :y => style.crop_y, :width => style.crop_w, :height => style.crop_h, :crop => :crop) %>
                        <div>
                          <br><br>
                        <h5><%= style.name %></h5>
                        </div>
                        <%end %>
                       </div>
                    </div>
            <% end %>       
				</li>

		
			</ul>

                      
    		<div class="clearfix"></div>
            
            </div><!-- end content -->
            
            
            <div id="sidebar" class="col-lg-4 col-md-4 col-sm-12">
				
                <div class="widget">
                    <div class="search">
                        <input type="text" size="16" placeholder="Search&hellip;" name="s" id="s">
                    </div>
                </div>
                                
                <div class="widget">
            	<h2 class="general-title">
                <span>Styles <%= @user.name %> likes</span>
				</h2>
                	<div class="buddy-members">
                    <ul>
                      <li>  <% @user.find_voted_items.take(10).each do |style| %> 
                               
                                  <%= link_to cl_image_tag(style.image1), style %>
                              
                            <% end %></li>
                    
                      
                   </ul>
                    </div>
                </div>

				<div class="clearfix"></div>
                

                
                
            </div><!-- end sidebar -->
            
        </div><!-- end container -->
	
    <!-- END CONTENT AND SIDEBAR -->
    
	</section><!-- end colon1 -->