<section class="colon14">
  <% @name ="Forgot your password?" %>
        
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
        <!-- START CONTENT AND SIDEBAR -->
        <div class="container general">
        
            <div id="content" class="single col-lg-10 col-md-10 col-sm-10">

			<div class="clearfix"></div>
           
            
              <div class="col-sm-12 col-lg-10 col-lg-offset-3">
                <p class="lead text-muted">Forgot your password?</p>
                <form class="form-horizontal">
                  <div class="form-group">
                    <div class="col-lg-10">
                    <div class="form-group">  
                      <%= f.text_field :email, required: false, autofocus: true,class:"form-control", placeholder:"Email"  %>
                   </div>  

                      <%= f.submit "Send me reset password instructions", class:"btn btn-primary" %>
                      <br><%= render "devise/shared/links" %>
                    </div>
                  </div>
                  
                </form>          
              </div>

			<div class="clearfix"></div>
            
            
            

            </div><!-- end content -->
            
        </div><!-- end container -->
	
    <!-- END CONTENT AND SIDEBAR -->
<% end %>    
	</section><!-- end colon1 -->

