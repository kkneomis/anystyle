<section class="colon14">
  <% @name ="Log in" %>
        
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>   
        <!-- START CONTENT AND SIDEBAR -->
        <div class="container general">
        
            <div id="content" class="single col-lg-10 col-md-10 col-sm-10">

			<div class="clearfix"></div>
           
            
              <div class="col-sm-12 col-lg-10 col-lg-offset-3">
                <p class="lead text-muted">Log in</p>
                <form class="form-horizontal">
                  <div class="form-group">
                    <div class="col-lg-10">
                    <div class="form-group">  
                      <%= f.text_field :email, required: false, autofocus: true,class:"form-control", placeholder:"Email"  %>
                   </div>  
                    <div class="form-group">
                      <%= f.password_field :password, required: false,class:"form-control", placeholder:"Pasword"  %>
                      </div> 
                      <% if devise_mapping.rememberable? -%>
                         <div class="form-group">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end -%>
                      <%= f.submit "Log in", class:"btn btn-primary" %>
                      <br><%= render "devise/shared/links" %>
                    </div>
                  </div>
                  
                </form>          
              </div>

			<div class="clearfix"></div>
            
            
            

            </div><!-- end content -->
            
        </div><!-- end container -->
	
    <!-- END CONTENT AND SIDEBAR -->
<% end %>    
	</section><!-- end colon1 -->






